<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/ic_profile_back_card"
                android:orientation="vertical"
                android:paddingTop="216dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="31dp"
                    android:orientation="horizontal">

                    <com.app.lystn.view.SFProRegularTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="First Name"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.app.lystn.view.SFProBoldET
                        android:id="@+id/tv_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:minWidth="100dp"
                        android:background="@null"
                        android:singleLine="true"
                        android:alpha="0.45"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="31dp"
                    android:orientation="horizontal">

                    <com.app.lystn.view.SFProRegularTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="Last Name"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.app.lystn.view.SFProBoldET
                        android:id="@+id/tv_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:alpha="0.45"
                        android:minWidth="100dp"
                        android:singleLine="true"
                        android:background="@null"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="31dp"
                    android:orientation="horizontal">

                    <com.app.lystn.view.SFProRegularTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.app.lystn.view.SFProBoldET
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:alpha="0.45"
                        android:singleLine="true"
                        android:minWidth="100dp"
                        android:background="@null"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="31dp"
                    android:orientation="horizontal">

                    <com.app.lystn.view.SFProRegularTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:minWidth="100dp"
                        android:background="@null"
                        android:text="Mobile NO."
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.app.lystn.view.SFProBoldET
                        android:id="@+id/tv_mobile_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:alpha="0.45"
                        android:minWidth="100dp"
                        android:background="@null"
                        android:text=""
                        android:maxLength="13"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="31dp"
                    android:orientation="horizontal">

                    <com.app.lystn.view.SFProRegularTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="Gender"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <com.app.lystn.view.SFProRegularTV
                        android:id="@+id/tv_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:alpha="0.45"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:minHeight="31dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_profile_save" />

                    <ImageView
                        android:id="@+id/iv_logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_profile_logout" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_profile_top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/iv_back"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_back" />
                    </LinearLayout>

                    <com.app.lystn.view.SFProBoldTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Profile"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:visibility="invisible">

                        <com.app.lystn.view.SFProSemiBoldTV
                            android:id="@+id/tv_skip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="Skip"
                            android:textColor="#000000"
                            android:textSize="16sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="22dp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/frame_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_profile_img_circle">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_profile"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_user_default" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_profile_edit"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="54dp"
                            android:layout_marginLeft="60dp"/>

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.app.lystn.view.RobotoMediumTV
                            android:id="@+id/tv_profile_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile Name"
                            android:textColor="#000000"
                            android:textSize="17sp" />

                        <com.app.lystn.view.RobotoMediumTV
                            android:id="@+id/tv_profile_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="admin@admin.com"
                            android:textColor="#808080"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </ScrollView>



</FrameLayout>